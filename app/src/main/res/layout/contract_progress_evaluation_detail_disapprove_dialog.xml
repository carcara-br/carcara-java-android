<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="br.com.stant.stant_android_fiscal.contractprogressevaluation.contractprogressevaluationdetail.ContractProgressEvaluationDetailFragment"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contract_progress_evaluation_detail_frag_dialog.disapproval"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/contract_progress_evaluation_detail_text_justify_info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contract_progress_evaluation_detail_frag_dialog.text_disapprove_guide"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_marginStart="5dp"/>

            <EditText
                android:id="@+id/contract_progress_evaluation_detail_dialog_observation_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/dark_gray"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="2"
                android:gravity="top|left"
                android:maxLines="10"
                tools:visibility="visible"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <Button
                android:id="@+id/contract_progress_evaluation_detail_dialog_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/secondary_color"
                android:background="@android:color/transparent"
                android:text="@string/contract_progress_evaluation_detail_frag_dialog.cancel_button"
                />


            <Button
                android:id="@+id/contract_progress_evaluation_detail_dialog_justify_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/secondary_color"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"
                android:text="@string/contract_progress_evaluation_detail_frag_dialog.justify_button"
                />

            <Button
                android:id="@+id/contract_progress_evaluation_detail_dialog_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/secondary_color"
                android:background="@android:color/transparent"
                android:text="@string/contract_progress_evaluation_detail_frag_dialog.disapprove_button"/>

        </LinearLayout>


    </LinearLayout>

</layout>